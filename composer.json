{
    "name": "web4350/assignment05",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Don Stringham",
            "email": "donstringhm@weber.edu"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "slim/slim": "^3.1",
        "slim/flash": "^0.2.0",
        "slim/twig-view": "^2.3",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.5",
        "robmorgan/phinx": "^0.9.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "squizlabs/php_codesniffer": "^3.1",
        "fzaninotto/faker": "^1.7"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "clean": [
            "rm -fr ./vendor",
            "rm -f grade.xml",
            "composer clean-cache",
            "composer clean-logs"
        ],
        "clean-cache": [
            "rm -fr ./cache"
        ],
        "clean-logs": [
            "rm -fr ./logs/*.log"
        ],
        "fix": "vendor/bin/phpcbf --standard=PSR2 --extensions=php controllers models routes src tests",
        "grade": [
            "composer clean-cache",
            "vendor/bin/phpunit --log-junit grade.xml"
        ],
        "push": [
            "git add .",
            "git commit -m 'Updated assignment'",
            "git push origin"
        ],
        "run": [
            "composer clean-cache",
            "composer clean-logs",
            "echo 'Started web server on http://localhost:8888'",
            "php -S localhost:8888 -t public public/index.php"
        ],
        "sniff": "vendor/bin/phpcs --standard=PSR2 --extensions=php src tests",
        "test": [
            "vendor/bin/phpunit"
        ]
    }

}
